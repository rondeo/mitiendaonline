<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :class => "form-control form-control-sm" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control form-control-sm" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control form-control-sm" %>
  </div>

  <div class="field">
    <%= form.label :Image %>
    <%= form.file_field :image, class: "form-control form-control-sm" %>
  </div>

  <div class="field">
    <label>Categorias</label>
    <ul>
    <% @categories.each do |category| %>
       <%= check_box_tag "categories[]", category.id %> <%= category.name %>
    <% end %>
    </ul>
  </div>

  <div class="actions">
    <%= button_tag type: 'submit', class: "btn btn-success col-md-12" do %>
            <i class="fa fa-plus" aria-hidden="true"> Ingresar</i>
        <% end %>
  </div>
  <div class="actions">
    <%= link_to admins_path, class: 'btn btn-warning col-md-12' do %>
      <i class="fas fa-undo-alt"></i> Volver<% end %>
  </div>
    <br><br>
<% end %>
