  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="d-flex justify-content-center">Productos</h2> <br>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= image_tag "carouseloferta1.jpg", class: "d-block w-100" %>
            </div>
            <div class="carousel-item">
              <%= image_tag "carouseloferta1.jpg", class: "d-block w-100" %>
            </div>
            <div class="carousel-item">
              <%= image_tag "carouseloferta1.jpg", class: "d-block w-100" %>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
          </a>
        </div>

      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <br>
        <h4> Filtrar por Categorias:</h4>
        <li><%= link_to 'Inicio', root_path, class: "categories" %></li>
        <% Category.all.each do |categories|%>
          <li><%= link_to categories.name, products_path(category: categories.name), class: "categories"%></li>
        <% end %>
      </div>
      <div class="col-md-10">
      <div class="row">
        <% @products.each do |product| %>
            <div id="animated-example" class="animated bounceIn">
              <div class="card col-md-12">
                <%= link_to product do %>
                  <%= image_tag product.image.variant(resize: "150x150!"), class: "card-img-top" %>
                <% end %>
                <div class="body">
                  <p class="prodname"> <%= product.name %> </p>
                  <p class="precio"> Precio: $ <%= product.price %> </p>
                  <% if user_signed_in?%>
                  <%= link_to 'Agregar al Carro', product_orders_path(product), class: 'btn btn-success col-md-12', method: :post %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
 <br>
