<%= render 'products/carousel' %>
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <br>
        <h4> Filtrar por Categorias:</h4>
        <li><%= link_to 'Inicio', root_path, class: "categories" %></li>
        <% Category.all.each do |categories|%>
          <li><%= link_to categories.name, products_path(category: categories.name), class: "categories"%></li>
        <% end %>
      </div>
      <div class="col-md-10">
      <div class="row">
        <% @products.each do |product| %>
            <div id="animated-example" class="animated bounceIn">
              <div class="card col-md-12">
                <%= link_to product do %>
                  <%= image_tag product.image.variant(resize: "150x150!"), class: "card-img-top" %>
                <% end %>
                <div class="body">
                  <p class="prodname"> <%= product.name %> </p>
                  <p class="precio"> Precio: $ <%= product.price %> </p>
                  <% if user_signed_in?%>
                  <li class="btn">  <%= link_to product_orders_path(product), class: 'btn btn-success col-md-12', method: :post do %>
                        <i class="fas fa-plus"></i><i class="fas fa-shopping-cart"></i> Agregar<% end %></li>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
 <br>
